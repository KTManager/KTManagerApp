<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KillTeam.Views.AptitudeView">
    <ContentView.Content>
        <StackLayout Padding="10" 
                     Orientation="Vertical">
            <StackLayout>
                <Label x:Name="Nom" 
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label x:Name="Description" 
                       FontSize="16" />
            </StackLayout>
            <Grid x:Name="Grid" 
                  HorizontalOptions="FillAndExpand" 
                  ColumnSpacing="0" 
                  RowSpacing="0" 
                  Padding="10">
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>