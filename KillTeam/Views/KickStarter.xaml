<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:properties="clr-namespace:KillTeam.Properties;assembly=KillTeam"
             x:Class="KillTeam.Views.KickStarter">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Padding="10">
            <Label HorizontalOptions="Center" FontSize="30" VerticalOptions="Center" Text="{x:Static properties:Resources.KickStarterTitle}" />
            <Image Source="kickstarter.png" VerticalOptions="Center"/>
            <Label HorizontalOptions="Center" 
                   FontSize="Medium" 
                   VerticalOptions="Center"
                   Text="{x:Static properties:Resources.KickStarterText}" />
            <Button Text="{x:Static properties:Resources.KickStarterJoinUs}" Clicked="Voir_Clicked" VerticalOptions="End"/>
            <Button Text="{x:Static properties:Resources.KickStarterDotNotShow}" Clicked="NePlusAfficher_Clicked" VerticalOptions="End"/>
            <Button Text="{x:Static properties:Resources.KickStarterContinue}" Clicked="Continuer_Clicked" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>