<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="KillTeam.Views.WeaponsConfig"
             x:Name="PageListConfigsArmes"
             xmlns:properties="clr-namespace:KillTeam.Properties;assembly=KillTeam">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="ConfigLabel" Text="{x:Static properties:Resources.ArmeConfigTitle}" FontSize="20" />
                <StackLayout x:Name="LayoutConfig">

                </StackLayout>
                <BoxView x:Name="ArmesOptionnellesSep" Color="Black" HeightRequest="1"></BoxView>
                <Label x:Name="ArmesOptionnellesLabel" Text="{x:Static properties:Resources.ArmeOptionnelleTitle}" FontSize="20" />
                <StackLayout x:Name="LayoutOptionnelles">

                </StackLayout>
                <BoxView x:Name="ArmesFixeSep" Color="Black" HeightRequest="1"></BoxView>
                <Label x:Name="ArmesFixeLabel" Text="{x:Static properties:Resources.ArmeObligatoireTitle}" FontSize="20" />
                <StackLayout x:Name="LayoutFixe">

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>