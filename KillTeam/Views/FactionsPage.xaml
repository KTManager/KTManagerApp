<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KillTeam.Views.FactionsPage"
             Title="{Binding Title}">
    <StackLayout>
        
        <ListView x:Name="FactionsListView"
                ItemsSource="{Binding}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                CachingStrategy="RecycleElement"
                ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="5,5,5,0" Padding="10" Style="{DynamicResource Frame}">
                            <Label Text="{Binding Name}" LineBreakMode="NoWrap" FontSize="16" Style="{DynamicResource FrameLabel}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
