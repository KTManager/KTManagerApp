<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:KillTeam.Services;assembly=KillTeam"
             x:Class="KillTeam.Views.LanguagePage"
             Title="{Binding Title}">

    <StackLayout>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Label Text="{i18n:Translate French}"
                                LineBreakMode="NoWrap" 
                                Style="{DynamicResource ListItemTextStyle}"
                                FontSize="16" />
            <Switch IsToggled="{Binding French, Mode=TwoWay}"
                                IsEnabled="True"
                                x:Name="SwitchFrench"
                                HorizontalOptions="EndAndExpand"></Switch>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Label Text="{i18n:Translate German}"
                                LineBreakMode="NoWrap" 
                                Style="{DynamicResource ListItemTextStyle}"
                                FontSize="16" />
            <Switch IsToggled="{Binding German, Mode=TwoWay}"
                                IsEnabled="True"
                                x:Name="SwitchGerman"
                                HorizontalOptions="EndAndExpand"></Switch>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Label Text="{i18n:Translate English}"
                                LineBreakMode="NoWrap" 
                                Style="{DynamicResource ListItemTextStyle}"
                                FontSize="16" />
            <Switch IsToggled="{Binding English, Mode=TwoWay}"
                                IsEnabled="True"
                                x:Name="SwitchEnglish"
                                HorizontalOptions="EndAndExpand"></Switch>
        </StackLayout>
    </StackLayout>
</ContentPage>