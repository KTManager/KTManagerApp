<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="KillTeam.Themes.DarkTheme">

    <Color x:Key="PrimaryColor">#e84f0b</Color>
    <Color x:Key="SecondaryColor">#222831</Color>
    <Color x:Key="TertiaryColor">#393e46</Color>
    <Color x:Key="QuaternaryColor">#d6d7d7</Color>
    <Color x:Key="QuinaryColor">#f5f5f5</Color>

    <Style TargetType="{x:Type ContentPage}">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}"/>
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="BarTextColor" Value="{DynamicResource QuaternaryColor}" />
    </Style>

    <Style TargetType="{x:Type StackLayout}">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}"/>
    </Style>

    <Style TargetType="{x:Type Grid}">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}"/>
    </Style>

    <Style x:Key="Frame" TargetType="{x:Type StackLayout}">
        <Setter Property="BackgroundColor" Value="{DynamicResource TertiaryColor}"/>
    </Style>

    <Style TargetType="{x:Type ActivityIndicator}">
        <Setter Property="Color" Value="{DynamicResource PrimaryColor}"/>
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="TextColor" Value="{DynamicResource QuaternaryColor}"/>
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="BackgroundColor" Value="{DynamicResource QuaternaryColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource TertiaryColor}"/>
    </Style>

    <Style TargetType="{x:Type Entry}">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource QuinaryColor}"/>
    </Style>

    <Style x:Key="GridRowOdd" TargetType="{x:Type Label}">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource QuaternaryColor}"/>
    </Style>

    <Style x:Key="GridRowEven" TargetType="{x:Type Label}">
        <Setter Property="BackgroundColor" Value="{DynamicResource TertiaryColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource QuaternaryColor}"/>
    </Style>

    <Style x:Key="GridHeader" TargetType="{x:Type Label}">
        <Setter Property="BackgroundColor" Value="{DynamicResource QuinaryColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource SecondaryColor}"/>
    </Style>
</ResourceDictionary>